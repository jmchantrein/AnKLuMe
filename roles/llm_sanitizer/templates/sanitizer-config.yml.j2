# {{ ansible_managed }}
# LLM Sanitization Proxy configuration
# Generated by llm_sanitizer role â€” do not edit manually

service:
  listen_port: {{ llm_sanitizer_listen_port }}
  upstream_endpoint: "{{ llm_sanitizer_upstream_endpoint }}"

sanitization:
  mode: "{{ llm_sanitizer_replacement_mode }}"
  patterns_file: "{{ llm_sanitizer_patterns_path }}"
  categories:
    ip_addresses: {{ llm_sanitizer_enable_ip_patterns | lower }}
    incus_resources: {{ llm_sanitizer_enable_incus_patterns | lower }}
    fqdn: {{ llm_sanitizer_enable_fqdn_patterns | lower }}
    credentials: {{ llm_sanitizer_enable_credential_patterns | lower }}
    ansible_names: {{ llm_sanitizer_enable_ansible_patterns | lower }}
    service_identifiers: {{ llm_sanitizer_enable_service_patterns | lower }}

audit:
  enabled: {{ llm_sanitizer_audit_enabled | lower }}
  log_path: "{{ llm_sanitizer_audit_log_path }}"
  redacted_only: {{ llm_sanitizer_audit_log_redacted_only | lower }}

domain:
  ai_provider: "{{ domain_ai_provider | default('local') }}"
  ai_sanitize: "{{ domain_ai_sanitize | default(false) }}"
